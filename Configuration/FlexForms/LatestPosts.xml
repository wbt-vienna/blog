<T3DataStructure>
    <meta>
        <langDisable>1</langDisable>
    </meta>
    <sheets>
        <sDEF>
            <ROOT>
                <TCEforms>
                    <sheetTitle>LLL:EXT:blog/Resources/Private/Language/locallang_db.xlf:flexform.sheet_general</sheetTitle>
                </TCEforms>
                <type>array</type>
                <el>
                    <settings.latestPosts.limit>
                        <TCEforms>
                            <label>LLL:EXT:blog/Resources/Private/Language/locallang_db.xlf:flexform.latestPosts.limit</label>
                            <config>
                                <type>input</type>
                                <eval>int</eval>
                            </config>
                        </TCEforms>
                    </settings.latestPosts.limit>
                    <headertype>
                        <TCEforms>
                            <label>Header-Type</label>
                            <config>
                                <type>input</type>
                                <size>2</size>
                                <max>2</max>
                                <default>h2</default>
                                <eval>trim</eval>
                            </config>
                        </TCEforms>
                    </headertype>
                    <footerLinkId>
                        <TCEforms>
                            <label>Link after content (id)</label>
                            <config>
                                <type>input</type>
                                <size>5</size>
                                <max>5</max>
                                <eval>int</eval>
                            </config>
                        </TCEforms>
                    </footerLinkId>
                    <footerLinkText>
                        <TCEforms>
                            <label>Link after content (text)</label>
                            <config>
                                <type>input</type>
                                <size>30</size>
                                <max>30</max>
                                <eval>trim</eval>
                            </config>
                        </TCEforms>
                    </footerLinkText>
                </el>
            </ROOT>
        </sDEF>
    </sheets>
</T3DataStructure>
